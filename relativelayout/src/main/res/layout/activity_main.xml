<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Logout button aligned to top right -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:textSize="12sp" />

        <!-- Header TextView centered horizontally -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portal Mahasiswa"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/holo_blue_dark" />

        <!-- Image below title -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/dialog_holo_light_frame" />

        <!-- Name TextView below image -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahmad Rizki Pratama"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <!-- Email TextView below name -->
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ahmad.rizki@student.ac.id"
            android:textSize="14sp"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/darker_gray" />

        <!-- Buttons for showing information -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/show_info_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tampilkan Informasi Mahasiswa"
                android:layout_margin="4dp"
                android:textSize="12sp"
                android:backgroundTint="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/show_schedule_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tampilkan Jadwal Kuliah"
                android:layout_margin="4dp"
                android:textSize="12sp"
                android:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:id="@+id/show_course_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tampilkan Informasi Mata Kuliah"
                android:layout_margin="4dp"
                android:textSize="12sp"
                android:backgroundTint="@android:color/holo_orange_light" />

        </LinearLayout>

        <!-- Student Information Display -->
        <TextView
            android:id="@+id/student_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_container"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:background="#e8f4fd"
            android:padding="12dp"
            android:textSize="11sp"
            android:textColor="#333333"
            android:fontFamily="monospace" />

        <!-- Schedule Information Display -->
        <TextView
            android:id="@+id/schedule_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_container"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:background="#f0fff0"
            android:padding="12dp"
            android:textSize="10sp"
            android:textColor="#333333"
            android:fontFamily="monospace" />

        <!-- Course Information Display -->
        <TextView
            android:id="@+id/course_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_container"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:background="#fff8dc"
            android:padding="12dp"
            android:textSize="10sp"
            android:textColor="#333333"
            android:fontFamily="monospace" />


    </RelativeLayout>

</ScrollView>